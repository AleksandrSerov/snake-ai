{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"~/*": ["./*"]
		},
		"module": "esnext",
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"typeRoots": ["./node_modules/@types"],
		"types": ["jest"],
		"lib": ["dom", "ESNext"],
		"moduleResolution": "node",
		"resolveJsonModule": true
	},

	"include": ["src/**/*"]
}
